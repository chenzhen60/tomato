{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "tomato",
		"version": "0.0.1"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"shell": {
				"all": false,
				"open": true
			},
			"fs" : {
				"scope": ["*"]
			}
		},
		"bundle": {
			"active": true,
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico",
				"icons/icon.png"
			],
			"identifier": "com.cz.tomato",
			"targets": "all"
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "tomato",
				"width": 800,
				"height": 600
			}
		],
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": false
		}
	}
}
